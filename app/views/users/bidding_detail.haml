.container
  .row(style="width:1320px;" )
    .col-xs-3(style="padding-left:45px" )
      %h1活动通
    .col-xs-9(style="margin-top:20px; text-align:right" )
      你好,
      = @user_name
      %a(style="text-decoration:none" href="/signout" )退出
%ol.breadcrumb(style="padding-left:52px" )
  %li
    %a(style="text-decoration:none" )
      =link_to '首页',user_index_path(:user_name => @user_name,:admin_user => @user_name)
  %li
    %a
      =link_to '竞价列表',bidding_list_path(:activity_name => @activity_name,:user_name => @user_name ,:admin_user => @user_name)
  %li.active
    = @bid_name
.container(style="width:100%" )
  .row(style="background-color:#f5f5f5;height:100px" )
    -if flash[:no_winner]
      .text-center
        %p(style="height:30px;line-height:30px;" ) 本次竞价无人胜出！
    -if flash[:no_end]
      .text-center
        %p(style="height:30px;line-height:30px;" ) 活动正在进行中!
    -if flash[:winner]
      %h4(align='center')
        获胜者：
        =@winner.name
      %h4(align='center')
        出价：
        =@winner.price
        元
      %h4(align='center')
        手机号：
        =@winner.phone
  .row(style="padding:25px 50px" )
    %ul.nav.nav-tabs.nav-justified
      %li.active
        %a 出价列表
      %li
        %a
          =link_to '价格统计',price_statistics_path(:activity_name => @activity_name,:user_name => @user_name,:bid_name => @bid_name,:admin_user => @user_name)
    .panel.panel-default
      %table.table(style="text-align:center" )
        %thead
          %tr
            %th.text-center 编号
            %th.text-center 姓名
            %th.text-center 价格/元
            %th.text-center 手机号
        %tbody
          - a = (session[:a]-1)*10+1
          - @bid_details.each do |bid_detail|
            %tr
              %td
                = a
                - a += 1
              %td=bid_detail.name
              %td=bid_detail.price
              %td=bid_detail.phone
  .row(style="width:1305px")
    .col-xs-12(style="text-align:right" )
      = will_paginate @bid_details,:previous_label => '&laquo',:next_label =>'&raquo'
