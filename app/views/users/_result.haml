.container
  .row(style="width:1320px;" )
    .col-xs-3(style="padding-left:45px" )
      %h1活动通
    .col-xs-9(style="margin-top:20px; text-align:right" )
      你好,
      = @user_name
      %a(style="text-decoration:none" href="/signout" )退出
%ol.breadcrumb(style="padding-left:52px" )
  %li
    %a(style="text-decoration:none" )
      =link_to '首页',user_index_path(:user_name => @user_name,:admin_user => @user_name)
  %li
    %a
      =link_to '竞价列表',bidding_list_path(:activity_name => @activity_name,:user_name => @user_name,:admin_user => @user_name)
  %li.active
    = @bid_name
.container(style="width:100%" )
  .row(style="background-color:#f5f5f5;height:100px" )
    - if @bid.status == 'end'
      - if @price_info.present?
        %h4(align='center')
          获胜者：
          =@winner.name
        %h4(align='center')
          出价：
          =@winner.price
          元
        %h4(align='center')
          手机号：
          =@winner.phone
      - else
        %h3(align='center' ) 本次竞价无人胜出！
    - else
      %h3(align='center')活动正在进行中!