.container
  .row(style="width:1320px" )
    .col-xs-3(style="padding-left:55px" )
      %h1活动通
    .col-xs-9(style="margin-top:20px; text-align:right" )
      你好,
      = @user_name
      %a(style="text-decoration:none" href="/signout" )退出
  .row(style="width:1320px;padding:20px 0px")
    .col-xs-12(style="padding-left:55px" )
      .panel.panel-default
        .panel-heading(style="padding:2px 14px" )
          %h4
            活动信息
        %table.table(style="text-align:center" )
          %thead
            %tr
              %th.text-center 编号
              %th.text-center 活动名称
              %th.text-center 报名人数
              %th.text-center 竞价次数
          %tbody
            - a = (session[:a]-1)*10+1
            - @activities.each do |activity|
              %tr
                %td
                  = a
                  - a += 1
                %td
                  =link_to activity.activity_name,bidding_list_path(:activity_name => activity.activity_name,:user_name => activity.user_name)
                %td
                  =link_to activity.sign_up_counts,sign_up_list_path(:activity_name => activity.activity_name,:user_name =>activity.user_name)
                %td=activity.bidding_counts
  .row(style="width:1305px")
    .col-xs-12(style="text-align:right" )
      = will_paginate @activities,:previous_label => '&laquo',:next_label =>'&raquo'