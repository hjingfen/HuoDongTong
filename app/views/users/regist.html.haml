%h1活动通
.regist-box
  .clearfix
    %h4新用户注册
    %a.navbar-right(style="text-decoration: none;padding-right:20px" href="/" )用户登录
  %br
  %form(name='new_user' action="/new" method="post" )
    .col-md-12.input-group
      %span.input-group-addon(name='name' style="width:109px" ) 账号
      %input.form-control(type="text" )
    %br
    .col-md-12.input-group
      %span.input-group-addon(name='password' style="width:109px") 请设置密码
      %input.form-control(type="password" )
    %br
    .col-md-12.input-group
      %span.input-group-addon(name='confirm_password' style="width:109px") 请确认密码
      %input.form-control(type="password" )
    %br
    .col-md-12.input-group
      %span.input-group-addon(name='question' style="width:109px") 忘记密码问题
      %input.form-control(type="text" )
    %br
    .col-md-12.input-group
      %span.input-group-addon(name='answer' style="width:109px") 忘记密码答案
      %input.form-control(type="text" )
    %br
    -if flash[:registed_error]
      .text-center.alert-danger
        %p(style="height:30px;line-height:30px;" ) 该用户已注册！
    -if flash[:not_same_error]
      .text-center.alert-danger
        %p(style="height:30px;line-height:30px;" ) 两次密码不一致！
    %br
    .col-md-4
    .col-md-4
      %button.form-control.btn.btn-default(type="submit" )
        注册
    .col-md-4
