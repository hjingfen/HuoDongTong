.container
  .row(style="padding-left:45px" )
    %h1活动通
  .row(style="width:1350px" )
    .index-box
      .clearfix
        %h4用户登录
        %a.navbar-right(style="text-decoration: none;padding-right:20px" href="/users/new" )用户注册
      %form(name='user' action="/signin" method="post" onsubmit="return check_signin_form()")
        .col-xs-12.input-group
          %span.input-group-addon( style="width:109px" ) 账号
          %input.form-control(name="name" type="text" )
        %br
        .col-xs-12.input-group
          %span.input-group-addon( style="width:109px" ) 密码
          %input.form-control(name="password" type="password" )
        .clearfix
          %a.navbar-right(style="text-decoration:none;padding-right:20px" href="/session/forgot1" )忘记密码
        %br
        .text-center.alert-danger#error_alert(style="display:#{flash[:signin_error].present? ? 'static' : 'none'}" )
          %p(style="height:30px;line-height:30px;" )
            = flash[:signin_error]
        %br
        .col-xs-4
        .col-xs-4
          %button.form-control.btn.btn-default(type="submit" )
            登录