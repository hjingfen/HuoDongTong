.container
  .row(style="width:1320px;" )
    .col-xs-3(style="padding-left:45px" )
      %h1活动通
    .col-xs-9(style="margin-top:20px; text-align:right" )
      你好,
      = @admin_name
      %a(style="text-decoration:nome" href="/admin/signout" )退出
%ol.breadcrumb(style="padding-left:52px" )
  %li
    %a(style="text-decoration:nome" href="/admin/welcome" )
      首页
  %li.active
    修改用户密码
.container
  .row(style="width:1350px" )
    .change_password-box
      %form(name='change_password' action="save_password" method="post"  onsubmit="return check_form()")
        .col-xs-12.input-group
          %span.input-group-addon( style="width:109px" )账号
          %input.form-control(name='name' type="text" value= "#{@name}" disabled="disabled" )
        %br
        .col-xs-12.input-group
          %span.input-group-addon( style="width:109px") 请设置密码
          %input.form-control(name='new_password' type="password" placeholder="请输入新密码" )
        %br
        .col-xs-12.input-group
          %span.input-group-addon( style="width:109px" ) 请确认密码
          %input.form-control(name='confirm_password' type="password" placeholder="请再次输入" )
        %br
        .text-center.alert-danger#error_alert(style="display:#{flash[:registed_error].present? ? 'static' : 'none'}" )
          %p(style="height:30px;line-height:30px;" )
            = flash[:registed_error]
        %br
        .col-xs-4
        .col-xs-4
          %input.form-control.btn.btn-default(type="submit" value="确认修改" )
        .col-xs-4
