.container
  = render partial: 'layouts/header',locals: {name:@admin_name}

%ol.breadcrumb(style="padding-left:52px" )
  %li
    %a(style="text-decoration:none" href="/admin/welcome" )
      首页
  %li.active
    添加用户
.container
  .row(style="width:1350px" )
    .new_user-box
      %form(name='new_user' action="/admin/add_user" method="post"  onsubmit="return check_form()")
        .col-xs-12.input-group
          %span.input-group-addon( style="width:109px" ) 账号
          %input.form-control(name='name' type="text" )
        %br
        .col-xs-12.input-group
          %span.input-group-addon( style="width:109px") 请设置密码
          %input.form-control(name='password' type="password" )
        %br
        .col-xs-12.input-group
          %span.input-group-addon( style="width:109px") 请确认密码
          %input.form-control(name='confirm_password' type="password" )
        %br
        .col-xs-12.input-group
          %span.input-group-addon(style="width:109px") 忘记密码问题
          %input.form-control(name='question' type="text" )
        %br
        .col-xs-12.input-group
          %span.input-group-addon(style="width:109px") 忘记密码答案
          %input.form-control(name='answer' type="text" )
        %br
        .text-center.alert-danger#error_alert(style="display:#{flash[:registed_error].present? ? 'static' : 'none'}" )
          %p(style="height:30px;line-height:30px;" )
            = flash[:registed_error]
        %br
        .col-xs-4
        .col-xs-4
          %input.form-control.btn.btn-default(type="submit" value="确认添加" )
        .col-xs-4
