#luck_draw_setting_flag.ng-scope
  %header
    %h3活动报名({{count}}人)
    .header-left
      %button.btn.btn-primary(ng-tap="go_list()")返回
    .header-right(ng-switch='start_end')
      %button.btn.btn-primary(ng-tap ='start_activity_sign_up()' ng-switch-when='start' ng-disabled='button_disabled')开始
      %button.btn.btn-primary(ng-tap ='end_activity_sign_up()' ng-switch-when='end' ng-disabled='button_disabled')结束
  #wrapper.wrapper.scrollable
    %ul.list-style-2
      %li.clearfix(ng-repeat= "applicant in applicants" style="height:35px" )
        %a.list-applicant-name
          {{applicant.name }}
        %a.list-applicant-phone
          {{applicant.phone}}
  %footer
    %ul(class="footer-nav footer-nav-2tabs")
      %li(class="active" )
        %a报名
      %li
        %a(ng-tap="go_bid_list()")竞价









